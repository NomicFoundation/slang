{
  "$schema": "http://json-schema.org/draft-06/schema",
  "$ref": "#/$defs/Topic",
  "$defs": {
    "Topic": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/Rule" }
    },
    "Rule": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" }
      },
      "oneOf": [
        { "$ref": "#/$defs/Alternation" },
        { "$ref": "#/$defs/Difference" },
        { "$ref": "#/$defs/Not" },
        { "$ref": "#/$defs/OneOrMore" },
        { "$ref": "#/$defs/Optional" },
        { "$ref": "#/$defs/Range" },
        { "$ref": "#/$defs/Reference" },
        { "$ref": "#/$defs/Sequence" },
        { "$ref": "#/$defs/Terminal" },
        { "$ref": "#/$defs/Versions" },
        { "$ref": "#/$defs/ZeroOrMore" }
      ]
    },
    "Alternation": {
      "type": "object",
      "required": ["alternation"],
      "properties": {
        "alternation": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/Rule" }
        }
      }
    },
    "Difference": {
      "type": "object",
      "required": ["difference"],
      "properties": {
        "difference": {
          "type": "object",
          "required": ["minuend", "subtrahend"],
          "properties": {
            "minuend": { "type": "string" },
            "subtrahend": { "type": "string" }
          }
        }
      }
    },
    "Not": {
      "type": "object",
      "required": ["not"],
      "properties": {
        "not": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1
        }
      }
    },
    "OneOrMore": {
      "type": "object",
      "required": ["oneOrMore"],
      "properties": {
        "oneOrMore": { "$ref": "#/$defs/Rule" }
      }
    },
    "Optional": {
      "type": "object",
      "required": ["optional"],
      "properties": {
        "optional": { "$ref": "#/$defs/Rule" }
      }
    },
    "Range": {
      "type": "object",
      "required": ["range"],
      "properties": {
        "range": {
          "type": "object",
          "required": ["from", "to"],
          "properties": {
            "from": { "type": "string" },
            "to": { "type": "string" }
          }
        }
      }
    },
    "Reference": {
      "type": "object",
      "required": ["reference"],
      "properties": {
        "reference": { "type": "string" }
      }
    },
    "Sequence": {
      "type": "object",
      "required": ["sequence"],
      "properties": {
        "sequence": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/Rule" }
        }
      }
    },
    "Terminal": {
      "type": "object",
      "required": ["terminal"],
      "properties": {
        "terminal": { "type": "string" }
      }
    },
    "Versions": {
      "type": "object",
      "required": ["versions"],
      "properties": {
        "versions": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9]+\\.[0-9]+\\.[0-9]+$": { "$ref": "#/$defs/Rule" }
          }
        }
      }
    },
    "ZeroOrMore": {
      "type": "object",
      "required": ["zeroOrMore"],
      "properties": {
        "zeroOrMore": { "$ref": "#/$defs/Rule" }
      }
    }
  }
}
