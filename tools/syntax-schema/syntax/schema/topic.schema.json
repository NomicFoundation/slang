{
  "$schema": "http://json-schema.org/draft-06/schema",
  "$ref": "#/$defs/Topic",
  "$defs": {
    "Topic": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/Production" }
    },
    "Production": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "pattern": { "enum": ["Token", "Expression"] },
        "config": {
          "$ref": "#/$defs/Config",
          "$comment": "How to model this constraint structurally?",
          "description": "Not valid with versions:"
        }
      },
      "oneOf": [
        { "$ref": "#/$defs/Versions" },
        { "$ref": "#/$defs/Choice" },
        { "$ref": "#/$defs/Difference" },
        { "$ref": "#/$defs/End" },
        { "$ref": "#/$defs/Not" },
        { "$ref": "#/$defs/OneOrMore" },
        { "$ref": "#/$defs/Optional" },
        { "$ref": "#/$defs/Range" },
        { "$ref": "#/$defs/Reference" },
        { "$ref": "#/$defs/Sequence" },
        { "$ref": "#/$defs/Terminal" },
        { "$ref": "#/$defs/ZeroOrMore" },
        { "$ref": "#/$defs/Repeat" }
      ]
    },
    "Config": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "lookahead": { "$ref": "#/$defs/Expression" },
        "prelude": { "type": "string" }
      }
    },
    "Versions": {
      "type": "object",
      "required": ["versions"],
      "properties": {
        "versions": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9]+\\.[0-9]+\\.[0-9]+$": { "$ref": "#/$defs/Expression" }
          }
        }
      }
    },
    "Expression": {
      "type": "object",
      "properties": {
        "config": { "$ref": "#/$defs/Config" }
      },
      "oneOf": [
        { "$ref": "#/$defs/Choice" },
        { "$ref": "#/$defs/Difference" },
        { "$ref": "#/$defs/End" },
        { "$ref": "#/$defs/Not" },
        { "$ref": "#/$defs/OneOrMore" },
        { "$ref": "#/$defs/Optional" },
        { "$ref": "#/$defs/Range" },
        { "$ref": "#/$defs/Reference" },
        { "$ref": "#/$defs/Sequence" },
        { "$ref": "#/$defs/Terminal" },
        { "$ref": "#/$defs/ZeroOrMore" },
        { "$ref": "#/$defs/Repeat" }
      ]
    },
    "Choice": {
      "type": "object",
      "required": ["choice"],
      "properties": {
        "choice": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/Expression" }
        }
      }
    },
    "Difference": {
      "type": "object",
      "required": ["difference"],
      "properties": {
        "difference": {
          "type": "object",
          "required": ["minuend", "subtrahend"],
          "properties": {
            "minuend": { "$ref": "#/$defs/Expression" },
            "subtrahend": { "$ref": "#/$defs/Expression" }
          }
        }
      }
    },
    "End": {
      "type": "object",
      "required": ["end"],
      "properties": {
        "end": { "type": "null" }
      }
    },
    "Not": {
      "type": "object",
      "required": ["not"],
      "properties": {
        "not": { "$ref": "#/$defs/Expression" }
      }
    },
    "Range": {
      "type": "object",
      "required": ["range"],
      "properties": {
        "range": {
          "type": "object",
          "required": ["from", "to"],
          "properties": {
            "from": { "type": "string", "minLength": 1, "maxLength": 1 },
            "to": { "type": "string", "minLength": 1, "maxLength": 1 }
          }
        }
      }
    },
    "Reference": {
      "type": "object",
      "required": ["reference"],
      "properties": {
        "reference": { "type": "string", "minLength": 1 }
      }
    },
    "Sequence": {
      "type": "object",
      "required": ["sequence"],
      "properties": {
        "sequence": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/Expression" }
        }
      }
    },
    "Terminal": {
      "type": "object",
      "required": ["terminal"],
      "properties": {
        "terminal": { "type": "string", "minLength": 1 }
      }
    },
    "Optional": {
      "type": "object",
      "required": ["optional"],
      "properties": {
        "optional": { "$ref": "#/$defs/Expression" }
      }
    },
    "ZeroOrMore": {
      "type": "object",
      "required": ["zeroOrMore"],
      "properties": {
        "zeroOrMore": {
          "type": "object",
          "properties": {
            "config": { "$ref": "#/$defs/Config" },
            "separator": { "$ref": "#/$defs/Expression" }
          },
          "oneOf": [
            { "$ref": "#/$defs/Choice" },
            { "$ref": "#/$defs/Difference" },
            { "$ref": "#/$defs/End" },
            { "$ref": "#/$defs/Not" },
            { "$ref": "#/$defs/OneOrMore" },
            { "$ref": "#/$defs/Optional" },
            { "$ref": "#/$defs/Range" },
            { "$ref": "#/$defs/Reference" },
            { "$ref": "#/$defs/Sequence" },
            { "$ref": "#/$defs/Terminal" },
            { "$ref": "#/$defs/ZeroOrMore" },
            { "$ref": "#/$defs/Repeat" }
          ]
        }
      }
    },
    "OneOrMore": {
      "type": "object",
      "required": ["oneOrMore"],
      "properties": {
        "oneOrMore": {
          "type": "object",
          "properties": {
            "config": { "$ref": "#/$defs/Config" },
            "separator": { "$ref": "#/$defs/Expression" }
          },
          "oneOf": [
            { "$ref": "#/$defs/Choice" },
            { "$ref": "#/$defs/Difference" },
            { "$ref": "#/$defs/End" },
            { "$ref": "#/$defs/Not" },
            { "$ref": "#/$defs/OneOrMore" },
            { "$ref": "#/$defs/Optional" },
            { "$ref": "#/$defs/Range" },
            { "$ref": "#/$defs/Reference" },
            { "$ref": "#/$defs/Sequence" },
            { "$ref": "#/$defs/Terminal" },
            { "$ref": "#/$defs/ZeroOrMore" },
            { "$ref": "#/$defs/Repeat" }
          ]
        }
      }
    },
    "Repeat": {
      "type": "object",
      "required": ["repeat"],
      "properties": {
        "repeat": {
          "type": "object",
          "properties": {
            "config": { "$ref": "#/$defs/Config" },
            "min": { "type": "number" },
            "max": { "type": "number" },
            "separator": { "$ref": "#/$defs/Expression" }
          },
          "oneOf": [
            { "$ref": "#/$defs/Choice" },
            { "$ref": "#/$defs/Difference" },
            { "$ref": "#/$defs/End" },
            { "$ref": "#/$defs/Not" },
            { "$ref": "#/$defs/OneOrMore" },
            { "$ref": "#/$defs/Optional" },
            { "$ref": "#/$defs/Range" },
            { "$ref": "#/$defs/Reference" },
            { "$ref": "#/$defs/Sequence" },
            { "$ref": "#/$defs/Terminal" },
            { "$ref": "#/$defs/ZeroOrMore" },
            { "$ref": "#/$defs/Repeat" }
          ]
        }
      }
    }
  }
}
