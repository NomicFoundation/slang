{
  "extends": "../../../../../tsconfig.json",

  "include": ["./src/**/*.ts"],

  "compilerOptions": {
    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",

    /* Language and Environment */
    "target": "ES2016",

    /* Projects */
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "target/tsc/.tsbuildinfo"
  }
}
