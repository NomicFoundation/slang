{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest",
  "type": "object",
  "required": ["rootProduction", "sections", "title", "versions"],
  "properties": {
    "title": {
      "type": "string"
    },
    "rootProduction": {
      "type": "string"
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ManifestSection"
      }
    },
    "versions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "ManifestSection": {
      "type": "object",
      "required": ["title", "topics"],
      "properties": {
        "title": {
          "type": "string"
        },
        "topics": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ManifestTopic"
          }
        }
      }
    },
    "ManifestTopic": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "definition": {
          "type": ["string", "null"]
        }
      }
    }
  }
}
