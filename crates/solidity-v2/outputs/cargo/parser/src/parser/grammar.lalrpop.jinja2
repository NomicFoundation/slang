Sep<S, T>: Vec<T> = {
    => vec![],
    SepOne<S, T> => <>,
};

SepOne<S, T>: Vec<T> = {
    <e:T> => {
        vec![e]
    },
    <mut v: SepOne<S, T>> S <e: T> => {
        v.push(e);
        v
    },
};

#[inline]
