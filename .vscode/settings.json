{
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "files.associations": {
    "*.tera": "handlebars" // Allow syntax highlighting for template variables.
  },
  "files.eol": "\n",
  "files.readonlyInclude": {
    "**/generated/**": true
  },
  "rust-analyzer.check.allTargets": true,
  "rust-analyzer.check.features": "all",
  "rust-analyzer.server.path": "${workspaceFolder}/bin/rust-analyzer",
  "search.exclude": {
    // Packages and Dependencies
    "**/.hermit/": true,
    "**/node_modules/": true,
    // Generated Artifacts
    "**/target/": true,
    // Lock Files
    "**/Cargo.lock": true,
    "**/package-lock.json": true,
    "**/Pipfile.lock": true
  },
  "triggerTaskOnSave.tasks": {
    "Run Rust Analyzer Checks": ["**/*.tera"],
    "Validate Solidity Definition": ["crates/solidity/inputs/language/definition/**/*.yml"]
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "yaml.validate": false // Disable LSP validation for YAML files, as it is handled by our own cargo tasks
}
