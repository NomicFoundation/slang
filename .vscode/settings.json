{
  // YAML
  "yaml.validate": false, // Disable editor validation, as it is superseeded by our own serializers
  // Editing
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "files.eol": "\n",
  "search.exclude": {
    "**/.hermit/": true,
    "**/generated/": true,
    "**/node_modules/": true,
    "**/target/": true
  }
}
