{
  // Rust
  "rust-analyzer.server.path": "/workspaces/slang/bin/rust-analyzer",
  "rust-analyzer.linkedProjects": ["code-analysis/Cargo.toml", "tools/version-breaks/Cargo.toml"],
  // YAML
  "yaml.customTags": ["!ENV"],
  // Editing
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "files.eol": "\n",
  "search.exclude": {
    "**/.hermit/": true,
    "**/generated/": true,
    "**/node_modules/": true,
    "**/target/": true
  },
  // Terminal
  "terminal.integrated.defaultProfile.linux": "devcontainer-zsh",
  "terminal.integrated.profiles.linux": {
    "devcontainer-zsh": {
      "path": "/bin/zsh",
      "args": ["-l"]
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
