{
  // Rust
  "rust-analyzer.linkedProjects": ["./tools/version-breaks/Cargo.toml", "./tools/spec_tools/Cargo.toml"],
  // Editing
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "files.eol": "\n",
  // Terminal
  "terminal.integrated.defaultProfile.linux": "devcontainer-zsh",
  "terminal.integrated.profiles.linux": {
    "devcontainer-zsh": {
      "path": "/bin/zsh",
      "args": ["-l"]
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
