{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Validate Solidity Schema",
      "type": "shell",
      "command": "scripts/solidity/validate-schema.sh",
      "options": {
        "env": {
          "VSCODE_PROBLEM_MATCHER": "true"
        }
      },
      "problemMatcher": {
        "owner": "solidity",
        "source": "codegen_utils",
        "applyTo": "allDocuments",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^\\s*slang-problem-matcher:([^:]+):([^:]+):([^-]+)-([^:]+):([^:]+): ([^:]+): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endLine": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
          }
        ]
      },
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      },
      "presentation": {
        "group": "slang",
        "reveal": "never",
        "clear": true
      }
    }
  ]
}
